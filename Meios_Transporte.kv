<Principal>:
    orientation: 'vertical'
    # Retangulo para colocar as imagens
    Widget:
        canvas:
            Rectangle:
                pos: (0, 100)
                size: (400,500)
                source: root.minha_imagem
    # Layout mensagem
    BoxLayout:
        size_hint: (None,None)
        height: 50
        width: 400
        Label:
            id: mensagem
            # definido dentro de um dicionario de dados
            # o dicionario Ã© composto por elementos contendo
            # chave e valor separados por dois pontos
            # e cada elemento separado por virgula em relacao aos demais
            pos_hint: {'x':0.5,'y':0.0} 
            text: ''
            font_size: 40
            # markup True habilita fontes coloridas e formatadas com
            # recursos negrito, italico e ou sublinhado
            markup: True

    BoxLayout:
        size_hint_y: None   
        height: 50
        orientation: 'horizontal'
        FloatLayout:
            Label:
                size_hint: (None,None)
                height: 40
                width: 50
                text: 'Transporte'
                pos_hint: {'x':0.05,'y':0.1}
            Spinner:
                id: txGrv
                text: 'Inicial'
                values: ('Aeronave','Carroca','Submarino','Trem','Triciclo','Tuc Tuc')
                size_hint: (None,None)
                height: 40
                width: 110
                pos_hint: {'x':0.20,'y':0.1}
                on_text: root.selecione(txGrv.text)
            Label:
                size_hint: (None,None)
                height: 40
                width: 30
                text: 'Som'
                pos_hint: {'x':0.6,'y':0.1}
            CheckBox:
                id: check_som
                active: True
                size_hint: (None,None)
                height: 40
                width: 20
                text: 'som'
                pos_hint: {'x':0.7,'y':0.1}
                on_active: root.controla_som(check_som.active)
            Button:
                size_hint: (None,None)
                height: 40
                width: 50
                text: 'Sair'
                pos_hint: {'x':0.85,'y':0.1}
                on_press: root.sair()
                                











                






            


